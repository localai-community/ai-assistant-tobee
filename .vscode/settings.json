{
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/.pytest_cache": true
    },
    "ai.chat.model": "gpt-4",
    "ai.chat.maxTokens": 4000,
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": ["tests"]
}
